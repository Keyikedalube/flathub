{
        "app-id": "io.gitlab.Keyikedalube.basic-calc",
        "runtime": "org.gnome.Platform",
        "runtime-version": "3.36",
        "sdk": "org.gnome.Sdk",
        "command": "basic-calc",
        "finish-args": [
                /* X11 access */
                "--share=ipc", "--socket=fallback-x11",
                /* Wayland access */
                "--socket=wayland"
        ],
        "build-options": {
                "cflags": "-O2 -g",
                "cxxflags": "-O2 -g"
        },
        "cleanup": [
                "/include"
                , "/lib/*/include"
                , "/lib/pkgconfig"
                , "/share/pkgconfig"
                , "share/aclocal"
                , "/man"
                , "/share/man"
                , "/share/info"
                , "/share/gtk-doc"
                , "*.la"
                , "*.a"
        ],
        "modules": [
                /*
                 * GTKMM
                 * And its dependencies
                 */
                {
                        "name": "mm-common",
                        "config-opts": [ "--disable-documentation" ],
                        "cleanup": [ "/" ],
                        "sources": [
                                {
                                        "type": "archive",
                                        "url": "http://ftp.gnome.org/pub/GNOME/sources/mm-common/1.0/mm-common-1.0.0.tar.xz",
                                        "sha256": "b97d9b041e5952486cab620b44ab09f6013a478f43b6699ae899b8a4da189cd4"
                                }
                        ]
                },
                {
                        "name": "sigc++",
                        "config-opts": [ "--disable-documentation" ],
                        "sources": [
                                {
                                        "type": "archive",
                                        "url": "http://ftp.gnome.org/pub/GNOME/sources/libsigc++/2.10/libsigc++-2.10.2.tar.xz",
                                        "sha256": "b1ca0253379596f9c19f070c83d362b12dfd39c0a3ea1dd813e8e21c1a097a98"
                                }
                        ]
                },
                {
                        "name": "glibmm",
                        "config-opts": [ "--disable-documentation" ],
                        "sources": [
                                {
                                        "type": "archive",
                                        "url": "http://ftp.gnome.org/pub/GNOME/sources/glibmm/2.64/glibmm-2.64.2.tar.xz",
                                        "sha256": "a75282e58d556d9b2bb44262b6f5fb76c824ac46a25a06f527108bec86b8d4ec"
                                }
                        ]
                },
                {
                        "name": "cairomm",
                        "config-opts": [ "--disable-documentation" ],
                        "sources": [
                                {
                                        "type": "archive",
                                        "url": "https://www.cairographics.org/releases/cairomm-1.12.2.tar.gz",
                                        "sha1": "621546f32221a2ddc079167a13ce5b5409bed704"
                                }
                        ]
                },
                {
                        "name": "pangomm",
                        "config-opts": [ "--disable-documentation" ],
                        "sources": [
                                {
                                        "type": "archive",
                                        "url": "http://ftp.acc.umu.se/pub/GNOME/sources/pangomm/2.42/pangomm-2.42.1.tar.xz",
                                        "sha256": "14bf04939930870d5cfa96860ed953ad2ce07c3fd8713add4a1bfe585589f40f"
                                }
                        ]
                },
                {
                        "name": "atkmm",
                        "config-opts": [ "--disable-documentation" ],
                        "sources": [
                                {
                                        "type": "archive",
                                        "url": "http://ftp.acc.umu.se/pub/GNOME/sources/atkmm/2.28/atkmm-2.28.0.tar.xz",
                                        "sha256": "4c4cfc917fd42d3879ce997b463428d6982affa0fb660cafcc0bc2d9afcedd3a"
                                }
                        ]
                },
                {
                        "name": "gtkmm",
                        "config-opts": [ "--disable-documentation" ],
                        "sources": [
                                {
                                        "type": "archive",
                                        "url": "http://ftp.gnome.org/pub/GNOME/sources/gtkmm/3.24/gtkmm-3.24.2.tar.xz",
                                        "sha256": "6d71091bcd1863133460d4188d04102810e9123de19706fb656b7bb915b4adc3"
                                }
                        ]
                },
                {
                        "name": "basic-calc",
                        "sources": [
                                {
                                        "type": "archive",
                                        "url": "https://gitlab.com/Keyikedalube/basic-calc/-/archive/v1.2/basic-calc-v1.2.tar.gz",
                                        "sha256": "8425a34325e615a5b7c2ccdb432203711c7fc41deab5d0e7d2b87999599bb6bf"
                                }
                        ],
                        "buildsystem": "cmake",
                        "config-opts": [ "-DCMAKE_INSTALL_PREFIX=/app" ]
                }
        ]
}
